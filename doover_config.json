{
    "deployment_package_dir": "deployment/",
    "modbus_channel_relay": {
        "key": "12795ed0-3457-44d7-b802-f3e4f11b711f",
        "name": "modbus_channel_relay",
        "display_name": "Modbus Channel Relay",
        "description": "Periodically record values from a TCP/RTU Modbus Server and publish them a specified Doover Channel.",
        "long_description": "README.md",
        "type": "DEV",
        "visibility": "PUB",
        "allow_many": true,
        "depends_on": [
            "modbus_interface"
        ],
        "owner_org": "36a22e32-ab81-4a39-b400-869d532a052d",
        "image_name": "ghcr.io/getdoover/modbus-channel-relay",
        "container_registry_profile": "88953909-e9c4-4f81-9ec0-56239d4b0a2e",
        "build_args": "--platform linux/amd64,linux/arm64",
        "config_schema": {
            "$schema": "https://json-schema.org/draft/2020-12/schema",
            "$id": "",
            "title": "Application Config",
            "type": "object",
            "properties": {
                "period_between_uploads": {
                    "title": "Period between uploads",
                    "x-name": "period_between_uploads",
                    "x-hidden": false,
                    "type": "number",
                    "description": "Value in minutes.",
                    "default": 60.0,
                    "minimum": 0
                },
                "channel_name": {
                    "title": "Channel Name",
                    "x-name": "channel_name",
                    "x-hidden": false,
                    "type": "string",
                    "description": "Name of the channel",
                    "default": "ModbusChannelRelay"
                },
                "device_id": {
                    "title": "Device ID",
                    "x-name": "device_id",
                    "x-hidden": false,
                    "type": "integer",
                    "description": "Device ID to read from. This was previously known as slave ID."
                },
                "start_address": {
                    "title": "Start Address",
                    "x-name": "start_address",
                    "x-hidden": false,
                    "type": "integer",
                    "description": "Register address to start reading from"
                },
                "number_of_registers": {
                    "title": "Number of Registers",
                    "x-name": "number_of_registers",
                    "x-hidden": false,
                    "type": "integer",
                    "description": "Number of registers to read"
                },
                "register_type": {
                    "enum": [
                        "Coil",
                        "Discrete Input",
                        "Input Register",
                        "Holding Register"
                    ],
                    "title": "Register Type",
                    "x-name": "register_type",
                    "x-hidden": false,
                    "type": "string",
                    "description": "Register type to read from",
                    "default": "Holding Register"
                },
                "modbus_config": {
                    "title": "Modbus Config",
                    "x-name": "modbus_config",
                    "x-hidden": false,
                    "type": "object",
                    "properties": {
                        "bus_type": {
                            "enum": [
                                "serial",
                                "tcp"
                            ],
                            "title": "Bus Type",
                            "x-name": "bus_type",
                            "x-hidden": false,
                            "type": "string",
                            "default": "serial"
                        },
                        "name": {
                            "title": "Name",
                            "x-name": "name",
                            "x-hidden": false,
                            "type": "string",
                            "default": "default"
                        },
                        "serial_port": {
                            "title": "Serial Port",
                            "x-name": "serial_port",
                            "x-hidden": false,
                            "type": "string",
                            "default": "/dev/ttyS0"
                        },
                        "serial_baud": {
                            "title": "Serial Baud",
                            "x-name": "serial_baud",
                            "x-hidden": false,
                            "type": "integer",
                            "default": 9600
                        },
                        "serial_method": {
                            "enum": [
                                "rtu",
                                "ascii",
                                "socket",
                                "tls"
                            ],
                            "title": "Serial Method",
                            "x-name": "serial_method",
                            "x-hidden": false,
                            "type": "string",
                            "default": "rtu"
                        },
                        "serial_data_bits": {
                            "title": "Serial Data Bits",
                            "x-name": "serial_data_bits",
                            "x-hidden": false,
                            "type": "integer",
                            "default": 8
                        },
                        "serial_parity": {
                            "enum": [
                                "None",
                                "Even",
                                "Odd"
                            ],
                            "title": "Serial Parity",
                            "x-name": "serial_parity",
                            "x-hidden": false,
                            "type": "string",
                            "default": "None"
                        },
                        "serial_stop_bits": {
                            "title": "Serial Stop Bits",
                            "x-name": "serial_stop_bits",
                            "x-hidden": false,
                            "type": "integer",
                            "default": 1
                        },
                        "serial_timeout": {
                            "title": "Serial Timeout",
                            "x-name": "serial_timeout",
                            "x-hidden": false,
                            "type": "number",
                            "default": 0.3
                        },
                        "tcp_uri": {
                            "title": "TCP URI",
                            "x-name": "tcp_uri",
                            "x-hidden": false,
                            "type": "string",
                            "default": "127.0.0.1:5000"
                        },
                        "tcp_timeout": {
                            "title": "TCP Timeout",
                            "x-name": "tcp_timeout",
                            "x-hidden": false,
                            "type": "number",
                            "default": 2.0
                        }
                    },
                    "additionalElements": false,
                    "required": []
                }
            },
            "additionalElements": true,
            "required": [
                "device_id",
                "start_address",
                "number_of_registers",
                "modbus_config"
            ]
        }
    }
}